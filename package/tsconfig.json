{
	"compilerOptions": {
		"target": "ESNext",
		"watch": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*"
	]
}
