{
	"compilerOptions": {
		"target": "ESNext",
		"watch": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"exclude": [
		"node_modules",
		"dist",
		"test"
	]
}
